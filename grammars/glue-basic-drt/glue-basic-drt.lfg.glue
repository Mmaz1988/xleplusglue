ENGLISH   BASIC   LEXICON (1.0)

"Complementizer"

  that 	  Comp * (^ COMPFORM) = 'that'.

"Nouns"

  David   N * @(NAME david).

  Chris   N * @(NAME chris).

  Tracy   N * @(NAME tracy).

  Kim   N * @(NAME kim).

  man 	  N * @(NOUN man).

  woman   N * @(NOUN woman).

  book 	  N * @(NOUN book).

  person  N * @(NOUN person).



"Determiners"

     "Quantifier"

     a 	  D * (^ SPEC PRED) = 'a'
     	      :$ lam(P,lam(Q,merge(drs([X],[]),merge(app(P,X),app(Q,X))))) :
     	      ((s::^_e -o s::^_t) -o AX_t.((s::^_e -o X_t) -o X_t)).

     the 	  D * (^ SPEC PRED) = 'the'
          	  :$ lam(P,lam(Q,merge(drs([X],[]),merge(app(P,X),app(Q,X))))) :
          	  ((s::^_e -o s::^_t) -o AX_t.((s::^_e -o X_t) -o X_t)).

     every 	D * (^ SPEC PRED) = 'every'
     	      :$ lam(P,lam(Q,drs([],[imp(merge(drs([X],[]),app(P,X)),app(Q,X))]))) :
     	      ((s::^_e -o s::^_t) -o AX_t.((s::^_e -o X_t) -o X_t)).
  

"Verbs"

  yawned  V * @(VERB-SUBJ yawn)
	      @VPAST.

  smiled  V * @(VERB-SUBJ smile)
	      @VPAST.

  saw 	  V * @(VERB-SUBJ-OBJ see)
	      @VPAST.

