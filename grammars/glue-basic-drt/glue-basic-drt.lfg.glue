ENGLISH   BASIC   TEMPLATES (1.0)

   "Templates for argument structure. Need to be separate to avoid trouble with local names"
   ARG1(ARG) =
        %EV = (s::^ EV)
       :$ lam(V,lam(X,lam(E,merge(app(V,E),drs([],[rel(arg1,E,X)]))))) :
       ((%EV_v -o %EV_t) -o (s::ARG_e -o (%EV_v -o %EV_t))).

   ARG2(ARG) =
       %EV = (s::^ EV)
       :$ lam(V,lam(X,lam(E,merge(app(V,E),drs([],[rel(arg2,E,X)]))))) :
       ((%EV_v -o %EV_t) -o (s::ARG_e -o (%EV_v -o %EV_t))).

"Nouns"

NOUN(P) = (^ PRED) = 'P'
      :$ lam(X,drs([],[pred(%stem,X)])) : (s::^_e -o s::^_t).

NAME(P) = (^ PRED) = 'P'
      :$ lam(X,drs([],[eq(X,%stem)])) : (s::^_e -o s::^_t),
      :$ lam(Q,lam(R,merge(drs([X],[]),merge(app(Q,X),app(R,X))))) :
      ((s::^_e -o s::^_t) -o AX_t.((s::^_e -o X_t) -o X_t)).

"Verbs"

   VERB-SUBJ(P) =
	  (^ PRED) = 'P<(^ SUBJ)>'
	  %EV = (s::^ EV)
	  @(ARG1 (^ SUBJ))
	  :$ lam(V,drs([],[pred(P,V)])) : (%EV_v -o %EV_t),
	  :$ lam(V,merge(drs([E],[]),app(V,E))) : (((s::^ EV)_v -o (s::^ EV)_t) -o s::^_t).
	  
   VERB-SUBJ-OBJ(P) =
	  (^ PRED) = 'P<(^ SUBJ)(^ OBJ)>'
	  %EV = (s::^ EV)
	  @(ARG1 (^ SUBJ))
	  @(ARG2 (^ OBJ))
	  :$ lam(V,drs([],[pred(P,V)])) : (%EV_v -o %EV_t),
	  :$ lam(V,merge(drs([E],[]),app(V,E))) : (((s::^ EV)_v -o (s::^ EV)_t) -o s::^_t).

   VPAST = (^ VTYPE) = FIN
	  (^ TENSE) = PST.

